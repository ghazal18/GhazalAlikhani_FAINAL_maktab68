<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="color">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyApplication.theme2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MyApplication.theme3">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MyApplication.materailButton">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.MyApplication.theme5">
        <item name="android:background">@drawable/rounded_top_corner</item>
    </style>

    <style name="Theme.MyApplication.themeForProduct">

        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/black</item>

    </style>

    <style name="Theme.MyApplication.theme4">
        <item name="android:background">@drawable/rounded_corner_two</item>
    </style>
    <style name="Theme.MyApplication.theme6" >
        <item name="android:textColor">@color/darkGray2</item>
    </style>
    <style name="Theme.MyApplication.theme7" >
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_corner_seven</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/darkGray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Notes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorSecondary">@color/slowGray</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>