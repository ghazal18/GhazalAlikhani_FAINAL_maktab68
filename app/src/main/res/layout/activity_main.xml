<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityBack1"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/fragment_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/pinkDark"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonProfile"
                android:layout_width="60dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/pinkDark"
                android:src="@drawable/ic_baseline_account_circle_24" />

            <ImageButton
                android:id="@+id/buttonshop"
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/pinkDark"
                android:src="@drawable/ic_baseline_shopping_cart_white" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mytoolbar"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:titleTextColor="@color/white"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
            <ImageButton
                android:id="@+id/buttonDarkMode"
                android:layout_width="60dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/pinkDark" />

            <ImageButton
                android:id="@+id/buttonSearch"
                android:layout_width="60dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/pinkDark"
                android:src="@drawable/ic_baseline_search_white" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:navGraph="@navigation/nav_graph" />

</LinearLayout>
